#include <iostream>
using namespace std;


// ini adalah prototype function

void penjumlahan ( int a , int b ) {
	cout << " penjumlahan dari 20 + 10 = " << ( a + b ) << endl;
}

void pengurangan ( int b , int c ) {
	cout << " pengurangan dari 20 - 10 = " << ( b - c ) << endl;
}

void perkalian ( int angka1 , int angka2 ) {
	cout << " perkalian dari 20 * 10 = " << ( angka1 * angka2 ) << endl;
}

void pembagian ( double c , double d ) {
	cout << " pembagian dari 20 / 10 = " << ( c/d) << endl;
}

int main () {
	cout << " TUGAS BAHASA PEMROGRAMAN " << endl;
	cout << " NAMA : NADIA AMIRA PUTRI " << endl;
	cout << " NIM : ETE10190111 " << endl;
	cout << endl;
	cout << " hasil dari function penjumlahan adalah " << endl;
	penjumlahan ( 20, 10);
	cout << endl;
	cout << " hasil dari function pengurangan adalah " << endl;
	pengurangan ( 20, 10);
	cout << endl;
	cout << " hasil dari function perkalian adalah " << endl;
	perkalian ( 20, 10);
	cout << endl;
	cout << " hasil dari function pembagian adalah " << endl;
	pembagian ( 20, 10);
	
}
